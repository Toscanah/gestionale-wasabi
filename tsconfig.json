{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "checkJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@shared": ["app/(site)/lib/shared/index.ts"],
      "@shared/models": ["app/(site)/lib/shared/models"],
      "@shared/schemas": ["app/(site)/lib/shared/schemas"],
      "@shared/types": ["app/(site)/lib/shared/types"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(site)/(domains)/backend/categories/.CategoryDialog.tsx",
    "build/types/**/*.ts",
    "app/(site)/lib/shared/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
