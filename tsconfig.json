{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "checkJs": true,
    "strictNullChecks": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "app/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@ui/*": [
        "components/ui/*"
      ],
      "@shared/*": [
        "components/shared/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@db/*": [
        "lib/db/*"
      ],
      "@api/*": [
        "lib/trpc/*"
      ],
      "@contracts/*": [
        "app/(site)/lib/shared/contracts/*"
      ],
      "@entities/*": [
        "lib/shared/entities/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@utils/*": [
        "lib/shared/utils/*"
      ],
      "@/context/*": [
        "app/(site)/context/*"
      ],
      "@/domains/*": [
        "app/(site)/(domains)/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(site)/lib/shared/types/**/*.d.ts",
    "build/types/**/*.ts",
    "build/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
